<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.WelcomePageActivity"
    android:background="#659092">

    <TextView
        android:id="@+id/textView7"
        android:layout_width="274dp"
        android:layout_height="102dp"
        android:layout_marginTop="70dp"
        android:text="SelfControl"
        android:textAlignment="center"
        android:textColor="#425E60"
        android:shadowColor="#D2DBC8"
        android:shadowDx="4"
        android:shadowDy="5"
        android:shadowRadius="2"
        android:textSize="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/appinfoTextView"
        android:layout_width="351dp"
        android:layout_height="209dp"
        android:layout_marginTop="32dp"
        android:text="x"
        android:textAlignment="center"
        android:textColor="#D2DBC8"
        android:textSize="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7" />

    <Button
        android:id="@+id/loginButton"
        android:layout_width="342dp"
        android:layout_height="43dp"
        android:layout_marginTop="28dp"
        android:backgroundTint="#425E60"
        android:onClick="girisyapButtonClicked"
        android:text="Continue"
        android:textColor="#D2DBC8"
        android:textColorLink="#D2DBC8"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/appinfoTextView" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="269dp"
        android:layout_height="29dp"
        android:layout_below="@+id/iv_splash"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="25dp"
        android:layout_marginTop="108dp"
        android:shadowColor="#D2DBC8"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="1"
        android:text="Loading...                         %50"
        android:textColor="#D2DBC8"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.521"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/loginButton" />

    <ImageView
        android:id="@+id/loading50"
        android:layout_width="278dp"
        android:layout_height="43dp"
        android:layout_marginBottom="50dp"
        android:src="@drawable/img_2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.518"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView6"
        app:layout_constraintVertical_bias="0.282"></ImageView>
</androidx.constraintlayout.widget.ConstraintLayout>